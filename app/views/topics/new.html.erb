<div class="flex items-center justify-center h-screen">
  <div class="my-10">
    <div class="w-full max-w-xs mx-auto">
      <%= form_with  url: topics_path, class: 'px-8 pt-6 pb-8 mb-4 bg-white rounded shadow-md' do |form| %>
        <%= form.fields_for :topic do |topic_fields| %>
          <div class="mb-4">
            <%= topic_fields.label :name, class: "block mb-2 text-sm font-bold text-gray-700" %>
            <%= topic_fields.text_field :name, class: "w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
          </div>

          <div class="mb-4">
            <%= topic_fields.fields_for :tags do |tag_fields| %>
              <%= tag_fields.label :tag_name, class: "block mb-2 text-sm font-bold text-gray-700" %>
              <%= tag_fields.text_field :tag_name, class: "w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
            <% end %>
          </div>
        <% end %>

        <div class="flex items-center justify-between">
          <%= form.submit "Save", class:"px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>